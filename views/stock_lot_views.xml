<!-- views\stock_lot_views.xml -->
<odoo>


    <!-- Agregar el botón para imprimir la etiqueta -->
<record id="view_lot_form_rollo" model="ir.ui.view">
    <field name="name">stock.move.line.form.rollo</field>
    <field name="model">stock.move.line</field>
    <field name="arch" type="xml">
        <form string="Lote de Producción">
            <header>
                <button name="%(action_report_rollo_label)d" string="Imprimir Etiqueta" type="action" class="oe_highlight"/>
            </header>
            <sheet>
                <group>
                    <field name="ancho"/>
                    <field name="gramaje"/>
                    <field name="tipo"/>
                    <field name="kilos"/>
                    <field name="planta"/>
                    <field name="folio"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

</odoo>
