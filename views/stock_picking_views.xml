<!-- views\stock_picking_views.xml -->
<odoo>
    <record id="view_picking_form_inherit_rollo" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.rollo</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group" position="inside">
                <field name="move_line_ids_without_package" widget="one2many"/>
            </xpath>

            <xpath expr="//field[@name='move_line_ids_without_package']" position="after">
                <field name="lot_id">
                    <tree editable="bottom">
                        <field name="ancho"/>
                        <field name="gramaje"/>
                        <field name="tipo"/>
                        <field name="kilos"/>
                        <field name="planta"/>
                        <field name="folio"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
