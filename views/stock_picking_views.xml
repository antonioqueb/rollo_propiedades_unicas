<odoo>
    <record id="view_picking_form_inherit_rollo" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.rollo</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Insertar el campo company_id en el formulario principal -->
            <xpath expr="//form/sheet/group" position="inside">
                <field name="company_id"/>
            </xpath>

            <!-- Insertar las propiedades del rollo dentro de las líneas de movimiento -->
            <xpath expr="//field[@name='move_line_ids']" position="replace">
                <field name="move_line_ids">
                    <tree editable="bottom">
                        <!-- Campos originales del modelo stock.move.line -->
                        <field name="product_id" domain="[('company_id', '=', context.get('company_id', False)), ('type', '!=', 'service')]" required="1"/>
                        <field name="lot_id" context="{'default_product_id': product_id}" domain="[('product_id', '=', product_id)]" required="1"/>
                        <field name="quantity" string="Done Quantity" required="1"/>

                        <!-- Campos personalizados del rollo añadidos a la línea de movimientos -->
                        <field name="ancho" string="Ancho"/>
                        <field name="gramaje" string="Gramaje"/>
                        <field name="tipo" string="Tipo"/>
                        <field name="kilos" string="Kilos"/>
                        <field name="planta" string="Planta"/>
                        <field name="folio" string="Folio"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
