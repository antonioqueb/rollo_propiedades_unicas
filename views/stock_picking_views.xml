<odoo>
    <record id="view_picking_form_inherit_rollo" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.rollo</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Asegúrate de insertar el campo company_id -->
            <xpath expr="//form/sheet/group" position="inside">
                <field name="company_id"/>
            </xpath>

            <!-- Insertar las propiedades del rollo dentro de las líneas de movimiento -->
          <xpath expr="//field[@name='move_line_ids']" position="inside">
                <tree editable="bottom">
                    <field name="product_id"/>
                    <field name="lot_id" context="{'default_product_id': product_id}" domain="[('product_id', '=', product_id)]"/>
                    <!-- Campos personalizados -->
                    <field name="ancho"/>
                    <field name="gramaje"/>
                    <field name="tipo"/>
                    <field name="kilos"/>
                    <field name="planta"/>
                    <field name="folio"/>
                </tree>
            </xpath>


        </field>
    </record>
</odoo>
