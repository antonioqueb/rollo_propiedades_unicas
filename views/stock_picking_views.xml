<odoo>
    <record id="view_picking_form_inherit_rollo" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.rollo</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Insertar las propiedades del rollo dentro de las lÃ­neas de movimiento -->
            <xpath expr="//field[@name='move_line_ids']/tree" position="inside">
                <!-- Campos personalizados -->
                <field name="ancho"/>
                <field name="gramaje"/>
                <field name="tipo"/>
                <field name="kilos"/>
                <field name="planta"/>
                <field name="folio"/>
            </xpath>
        </field>
    </record>
</odoo>
